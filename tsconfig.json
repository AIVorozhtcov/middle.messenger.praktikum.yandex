
{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "es6"],        
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,        
        "noEmit": true
    },
    "include": ["src", "./custom.d.ts"],
    "exclude": ["node_modules", "build", "static"]
}
